<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PinedaLPruebaProgreso2.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
            Text="Bienvenido a los mejores chistes de la red junto a Luis Pineda"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1" />

            <Image
                Source="gato.jpg"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="meme que me representa" />
            
            <Button
                x:Name="btnChistes"
                Text="Chistes" 
                SemanticProperties.Hint="te cuenta un buenchiste"
                Clicked="OnChistes"
                HorizontalOptions="Fill" />

            <Button
                x:Name="btnAbout"
                Text="About" 
                SemanticProperties.Hint="te cuenta un buenchiste"
                Clicked="OnAbout"
                HorizontalOptions="Fill" />     
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
